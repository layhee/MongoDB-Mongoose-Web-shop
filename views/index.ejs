<!DOCTYPE html>
<html>
<!-----------header calls---------->
<%- include('../partials/head.ejs')%>
<!----------end headers------------>
<header>
  <h1>
      <a id="home" href="/store">Mongoose Store</a>
  </h1>
  <a href="/store/new">Add a New Item</a>
</header>
<div>
      <div id="store-container">
        <%items.forEach(item => { %>
          <a href="/store/<%=item._id%>">
            <h2><%=item.name%></h2>
            <img src="<%=item.img%>"></a><br>
            <%=item.description%>
            <form action="/store/<%=item._id%>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
              <a href="/store/<%=item._id%>/edit">Edit</a>
            </form>
           <%})%>          
      </div>
  </body>
</html>